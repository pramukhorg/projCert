node('TestServer'){
   stage('Puppetins') { // for display purposes
      // install puppet agent
      sh "echo hello"
      sh "echo kavi"
      sh "export LC_ALL="en_US.UTF-8""
      sh "export LC_CTYPE="en_US.UTF-8""
   }
   stage('puppetagent') {
      // Run puppet agent
      sh "echo hi"
   }

}
