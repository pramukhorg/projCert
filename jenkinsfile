node('TestServer'){
   stage('Puppetins') { // for display purposes
      // install puppet agent
      sh "echo hello"
      sh "export LC_ALL=en_US.UTF-8"
      sh "export LC_CTYPE=en_US.UTF-8"
      sh "wget https://apt.puppetlabs.com/puppetlabs-release-pc1-xenial.deb"
      sh "dpkg -i puppetlabs-release-pc1-xenial.deb"
      sh "apt-get update -y"
      sh "apt-get install puppet-agent -y"
   }
   stage('puppetagent') {
      // Run puppet agent
      sh "echo hi"
   }

}
